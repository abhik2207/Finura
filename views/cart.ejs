<%- include('./partials/header') %>
    <% user.cart.forEach(function(item){ %>
        <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
            <div class="w-[30%] rounded-md overflow-hidden bg-[<%= item.panelColor %>] border-2 border-black">
                <div class="w-full h-80 bg-[<%= item.bgColor %>] flex items-center justify-center">
                    <img class="h-3/4 w-3/4 object-contain" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                </div>
                <div class="w-full flex justify-between px-5 py-4 border-t-2 border-white">
                    <h3 class="text-3xl font-semibold text-[<%= item.textColor %>]">Clinge Bag</h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center justify-between px-5 py-3">
                    <h4 class="text-lg text-[<%= item.textColor %>]">Net Total</h4>
                    <h2 class="text-lg text-[<%= item.textColor %>]">₹ <%= item.price - item.discount + platformFee + shippingCost %></h2>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ <%= item.price %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ <%= item.discount %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ <%= platformFee %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>₹ <%= shippingCost %></h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= item.price - item.discount + platformFee + shippingCost %></h3>
                </div>
                <form action=""></form>
            </div>
        </div>
    <% }) %>
<%- include('./partials/footer') %>